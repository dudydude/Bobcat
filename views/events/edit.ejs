<div class="container col s12 m4 l8 z-depth-3">

  <div class=" form-header red lighten-1 z-depth-1">
    <h3> Edit event </h3>
  </div>

<form method="POST" action="/events" >
    <label>
        Name of the event:
        </label>
        <input type="text" name="name"  >
    <label>
    Date :
    </label>
