<div class="container col s12 m4 l8 z-depth-3">

  <div class=" form-header red lighten-1 z-depth-1" enctype="multipart/form-data">
    <h3> Create new event </h3>
  </div>

  <form method="POST" action="/events">
    <label>
      Name of the event:
    </label>
    <input type="text" name="name">
    <br>
    <label>Address
    </label>
    <input id="searchTextField" name="searchTextField" class="form-control" placeholder="Start typing your address...">
    <input id="venue_lat" name="venue_lat" hidden>
    <input id="venue_long" name="venue_long" hidden>
    <input id="adress" name="adress" hidden>

    <label>
      Date :
    </label>
    <input type="date" name="date" class="datepicker">

    </br>
    <label>
      Description :
    </label>
    <input type="text" id="textarea1" class="materialize-textarea" name="description">
    </br>
    <div class="file-field input-field">
      <div class="btn">
        <span>File</span>
        <input type="file" multiple>
      </div>
      <div class="file-path-wrapper">
        <input class="file-path validate" type="text" placeholder="Upload one or more files">
      </div>
    </div>
    <!-- <label> Upload a picture
        <input type="file" name="photo">
    </label>-->
    <label> Choose the mood of the event :
      <br>
      <br>
      <span>
        <input class="with-gap" name="group1" type="radio" id="test1" />
        <label for="test1">Rave</label>
      </span>
      <span>
        <input class="with-gap" name="group1" type="radio" id="test2" />
        <label for="test2">Mosh</label>
      </span>
      <span>
        <input class="with-gap" name="group1" type="radio" id="test3" />
        <label for="test3">Groove</label>
      </span>
      <span>
        <input class="with-gap" name="group1" type="radio" id="test4" />
        <label for="test4">Smooth</label>
      </span>
      <span>
        <input class="with-gap" name="group1" type="radio" id="test5" />
        <label for="test5">Nod</label>
      </span>
    </label>
    <br>
    <br>

    <button type="submit" class="waves-effect waves-light btn">Create</button>
  </form>


</div>
